<div class="container my-5 w-30">
  <h1 class="mb-4">Restaurant Info</h1>
    <p><strong>Name:</strong>  <%= @restaurant.name %></p>
    <p><strong>Address:</strong> <%= @restaurant.address %></p>
    <p><strong>Category:</strong> <%= @restaurant.category %></p>

    <div class="d-flex">
      <%= link_to 'edit', edit_restaurant_path(@restaurant), class: 'btn btn-dark me-2' %>
      <%= link_to 'delete', restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure"}, class: 'btn btn-danger' %>
    </div>

    <%= link_to 'See all restaurants', restaurants_path, class: 'btn btn-primary mt-4' %>
  </div>
</div>
